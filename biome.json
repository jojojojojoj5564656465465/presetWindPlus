{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"includes": ["**", "!**/test", "!**/dist"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"lineWidth": 220,
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/doc"],
		"indentWidth": 3
	}
}

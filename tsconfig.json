{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmit": true,
		"sourceMap": true,
		"esModuleInterop": true
	},
	"exclude": ["**/dist/**", "**/node_modules/**", "eslint.config.js"]
}
